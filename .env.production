# eCyber Security Platform - Production Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://ecyber_user:CHANGE_THIS_PASSWORD@postgres:5432/ecyber
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Security Configuration
SECRET_KEY=CHANGE_THIS_SECRET_KEY_TO_SOMETHING_VERY_SECURE_AND_RANDOM
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_TO_SOMETHING_VERY_SECURE_AND_RANDOM
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security Features
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MFA_ENABLED=true
SESSION_TIMEOUT=3600

# Threat Intelligence
THREAT_INTELLIGENCE_ENABLED=true
THREAT_FEED_UPDATE_INTERVAL=3600
ML_MODEL_TRAINING_ENABLED=true
BEHAVIORAL_ANALYSIS_ENABLED=true

# Network Monitoring
NETWORK_MONITORING_ENABLED=true
PACKET_CAPTURE_ENABLED=true
DEEP_PACKET_INSPECTION=true
FLOW_TIMEOUT=300

# SIEM Configuration
SIEM_ENABLED=true
EVENT_RETENTION_DAYS=30
CORRELATION_ENABLED=true
ALERT_NOTIFICATIONS=true

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
WORKER_PROCESSES=4

# Monitoring Configuration
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@yourdomain.com

# External Integrations
VIRUSTOTAL_API_KEY=your-virustotal-api-key
SHODAN_API_KEY=your-shodan-api-key
ABUSE_CH_API_KEY=your-abuse-ch-api-key

# Cloud Configuration (if deploying to cloud)
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=ecyber-backups

# Kubernetes Configuration (if using K8s)
KUBERNETES_NAMESPACE=ecyber
KUBERNETES_SERVICE_ACCOUNT=ecyber-sa

# Advanced Security
ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_32_CHARS
HASH_SALT=CHANGE_THIS_HASH_SALT_16_CHARS
API_KEY_ENCRYPTION=true
DATA_ENCRYPTION_AT_REST=true

# Compliance
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false
SOC2_COMPLIANCE=true
AUDIT_LOGGING=true

# Feature Flags
FEATURE_AI_THREAT_DETECTION=true
FEATURE_AUTOMATED_RESPONSE=true
FEATURE_THREAT_HUNTING=true
FEATURE_VULNERABILITY_SCANNING=true
FEATURE_DECEPTION_TECHNOLOGY=false
FEATURE_MOBILE_SECURITY=false

# Performance Tuning
MAX_CONCURRENT_CONNECTIONS=1000
REQUEST_TIMEOUT=30
RESPONSE_TIMEOUT=30
KEEPALIVE_TIMEOUT=65
MAX_REQUEST_SIZE=100MB

# Logging Configuration
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=30
SYSLOG_ENABLED=true
SYSLOG_HOST=localhost
SYSLOG_PORT=514

# Development/Testing (set to false in production)
ENABLE_SWAGGER_UI=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false
MOCK_EXTERNAL_APIS=false

